
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Quên mật khẩu</h2>

@using (Html.BeginForm())
{
    <div class="container-fluid">
        <hr />
        <div class="text-success">
            @ViewBag.Message
        </div>
        <div class="">
            Nhập email mà bạn đã sử dụng để đăng ký tài khoản
        </div>
        <div class="">
            <label class="">Địa chỉ email</label>
            @Html.TextBox("EmailID", "", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Lấy lại mật khẩu" class="btn btn-success" />
            </div>
        </div>
    </div>
}

